# ========================================
# CONFIGURACOES DO BOT DISCORD
# ========================================

# Token do bot (Discord Developer Portal > Bot > Token)
DISCORD_TOKEN=seu_token_aqui

# Client ID do aplicativo (Discord Developer Portal > General Information)
DISCORD_CLIENT_ID=seu_client_id_aqui

# ID do servidor para testes (opcional - comandos aparecem instantaneamente)
# Deixe vazio para registrar comandos globalmente (demora ate 1 hora)
GUILD_ID=seu_guild_id_aqui

# ========================================
# BANCO DE DADOS MONGODB
# ========================================

# URI de conexao do MongoDB
# Local: mongodb://localhost:27017/gamification-bot
# Atlas: mongodb+srv://usuario:senha@cluster.xxxxx.mongodb.net/gamification-bot
MONGODB_URI=mongodb://localhost:27017/gamification-bot

# ========================================
# API REST (para integracao com site)
# ========================================

# Porta da API
API_PORT=3001

# Chave secreta para JWT
JWT_SECRET=sua_chave_secreta_muito_segura_aqui

# Chave de API para endpoints admin
API_KEY=sua_api_key_aqui

# ========================================
# CONFIGURACOES DO SITE
# ========================================

# URL do site (para CORS)
SITE_URL=https://areaburti.com.br
CORS_ORIGIN=https://areaburti.com.br

# ========================================
# CONFIGURACOES OPCIONAIS
# ========================================

# Ambiente (development / production)
NODE_ENV=development

# Nivel de log (debug / info / warn / error)
LOG_LEVEL=info
