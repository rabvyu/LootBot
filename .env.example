# =================================
# Discord Bot Configuration
# =================================

# Discord Bot Token (from Discord Developer Portal)
DISCORD_TOKEN=your_discord_bot_token_here

# Discord Application/Client ID (from Discord Developer Portal)
DISCORD_CLIENT_ID=your_client_id_here

# Guild ID for development (optional - for faster command registration)
# Leave empty for global commands (takes up to 1 hour to propagate)
GUILD_ID=your_guild_id_here

# =================================
# Database Configuration
# =================================

# MongoDB Connection URI
# Local: mongodb://localhost:27017/gamification-bot
# Atlas: mongodb+srv://user:password@cluster.mongodb.net/dbname
MONGODB_URI=mongodb://localhost:27017/gamification-bot

# =================================
# API Configuration
# =================================

# API Server Port
API_PORT=3001

# API Key for admin endpoints (generate a secure random string)
API_KEY=your_secure_api_key_here

# JWT Secret (for future authentication features)
JWT_SECRET=your_jwt_secret_here

# =================================
# Site Integration
# =================================

# Your site URL (for CORS configuration)
SITE_URL=https://yoursite.com

# CORS Origin (usually same as SITE_URL)
CORS_ORIGIN=https://yoursite.com

# =================================
# Environment
# =================================

# Node environment (development or production)
NODE_ENV=development
